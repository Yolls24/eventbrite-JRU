<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(event.errors.count, "erreur") %> ont empêché l’enregistrement :
      </h4>
      <ul class="mb-0">
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3">
    <%= form.text_field :title, class: "form-control", placeholder: "Titre de l'événement" %>
    <%= form.label :title, "Titre de l'événement" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_area :description, class: "form-control", placeholder: "Description", rows: 4, style: "height: 120px;" %>
    <%= form.label :description, "Description" %>
  </div>

  <div class="mb-3">
    <%= form.label :start_date, "Date et heure de début", class: "form-label" %>
    <%= form.datetime_select :start_date, class: "form-control" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.number_field :duration, class: "form-control", placeholder: "Durée (en minutes)" %>
    <%= form.label :duration, "Durée (en minutes)" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.number_field :price, class: "form-control", placeholder: "Prix (€)", step: 0.5 %>
    <%= form.label :price, "Prix (€)" %>
  </div>

  <div class="form-floating mb-4">
    <%= form.text_field :location, class: "form-control", placeholder: "Lieu" %>
    <%= form.label :location, "Lieu" %>
  </div>

  <%= form.submit event.new_record? ? "Créer l’événement" : "Mettre à jour", class: "btn btn-success" %>
<% end %>

  