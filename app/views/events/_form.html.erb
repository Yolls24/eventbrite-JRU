<%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(event.errors.count, "erreur") %> empêchent cet événement d'être enregistré :</h2>
        <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= form.label :title %><br>
      <%= form.text_field :title, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :description %><br>
      <%= form.text_area :description, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :start_date %><br>
      <%= form.datetime_select :start_date, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :duration, "Durée (en minutes)" %><br>
      <%= form.number_field :duration, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :price, "Prix (€)" %><br>
      <%= form.number_field :price, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :location %><br>
      <%= form.text_field :location, class: "form-control" %>
    </div>
  
    <%= form.submit class: "btn btn-primary" %>
  <% end %>
  