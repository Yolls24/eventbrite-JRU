<h1 class="title">S'inscrire à un événement</h1>

<div class="form-container">
  <%= form_with(model: @attendance, local: true, class: "attendance-form") do |form| %>
    <div class="form-group">
      <%= form.label :user_id, "Utilisateur", class: "form-label" %>
      <%= form.collection_select :user_id, User.all, :id, :email, prompt: "Sélectionner un utilisateur", class: "form-select" %>
    </div>

    <div class="form-group">
      <%= form.label :event_id, "Événement", class: "form-label" %>
      <%= form.collection_select :event_id, Event.all, :id, :title, prompt: "Sélectionner un événement", class: "form-select" %>
    </div>

    <div class="form-group">
      <%= form.label :stripe_customer_id, "Stripe Customer ID", class: "form-label" %>
      <%= form.text_field :stripe_customer_id, class: "form-input", placeholder: "cus_..." %>
    </div>

    <div class="form-actions">
      <%= form.submit "Je participe !", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  .title {
    text-align: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
    margin-bottom: 30px;
  }

  .form-container {
    max-width: 450px;
    margin: 0 auto;
    padding: 25px 30px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #fafafa;
    box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #555;
  }

  .form-select, .form-input {
    width: 100%;
    padding: 10px 12px;
    border: 1.5px solid #ccc;
    border-radius: 5px;
    font-size: 15px;
    transition: border-color 0.3s ease;
  }

  .form-select:focus, .form-input:focus {
    border-color: #007BFF;
    outline: none;
  }

  .form-actions {
    text-align: center;
  }

  .btn {
    cursor: pointer;
    border: none;
    border-radius: 6px;
    padding: 12px 28px;
    font-weight: 700;
    font-size: 16px;
    color: white;
    background-color: #007BFF;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>

